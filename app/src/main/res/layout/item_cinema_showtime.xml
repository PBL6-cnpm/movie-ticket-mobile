<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_12dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#E86017"
        app:strokeWidth="@dimen/_3dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cinema"
            android:layout_margin="@dimen/_4dp"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/name_branch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/card_img"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cines Da Nang"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_4dp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/card_img"
        tools:text="Cines Da Nang"
        app:layout_constraintTop_toBottomOf="@id/name_branch"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_4dp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="57km"
        app:layout_constraintTop_toBottomOf="@id/name_branch"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_4dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_img"
        app:layout_constraintBottom_toBottomOf="@id/card_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:tint="#FE7E32"
        app:layout_constraintWidth_percent="0.06"
        android:src="@drawable/ic_favourite"
        app:layout_constraintDimensionRatio="1:1" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_img"
        app:layout_constraintTop_toBottomOf="@id/card_img"
        android:fontFamily="@font/baloo2_semibold"
        android:textSize="@dimen/_12ssp"
        android:maxLines="1"
        android:textColor="@color/color_description"
        tools:text="121 Dien Bien Phu, Thanh Khe, Da Nang"
        app:layout_constraintEnd_toStartOf="@id/open_map"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/open_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_find_the_way"
        android:fontFamily="@font/baloo2_semibold"
        android:textSize="@dimen/_12ssp"
        android:textColor="#FE7E32"
        app:layout_constraintTop_toBottomOf="@id/card_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_show_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        app:layout_constraintStart_toStartOf="@id/card_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_12dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/item_showtime"/>
</androidx.constraintlayout.widget.ConstraintLayout>