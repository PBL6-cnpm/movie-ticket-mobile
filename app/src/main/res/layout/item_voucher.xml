<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_12dp"
    android:background="@drawable/shape_bg_item_discount"
    android:padding="@dimen/_12dp">

    <ImageView
        android:id="@+id/ic_voucher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_precent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1"
        app:tint="#f58248" />

    <TextView
        android:id="@+id/name_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:fontFamily="@font/baloo2_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@id/ic_voucher"
        app:layout_constraintStart_toEndOf="@id/ic_voucher"
        app:layout_constraintTop_toTopOf="@id/ic_voucher"
        tools:text="Bull Discount 25%" />

    <TextView
        android:id="@+id/code_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="#c3c4c5"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="@id/ic_voucher"
        app:layout_constraintTop_toBottomOf="@id/ic_voucher"
        tools:text="Code: BULK" />


    <TextView
        android:id="@+id/discount_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="#c3c4c5"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="@id/ic_voucher"
        app:layout_constraintTop_toBottomOf="@id/code_voucher"
        tools:text="Discount: 25k" />

    <ImageView
        android:id="@+id/ic_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_4dp"
        android:src="@drawable/ic_check"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_voucher"
        app:layout_constraintWidth_percent="0.08" />

    <ImageView
        android:id="@+id/ic_infor_voucher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_2dp"
        android:src="@drawable/ic_help"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/ic_selected"
        app:layout_constraintTop_toTopOf="@id/ic_selected"
        app:layout_constraintWidth_percent="0.08"
        app:tint="@color/color_description" />

    <TextView
        android:id="@+id/infor_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble"
        android:fontFamily="@font/baloo2_bold"
        android:maxLines="2"
        android:padding="@dimen/_6dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/ic_infor_voucher"
        app:layout_constraintTop_toBottomOf="@id/ic_infor_voucher"
        tools:text="This voucher is valid for all purchases."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/information_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo2_bold"
        android:textColor="@color/colorRed500"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintStart_toStartOf="@id/ic_voucher"
        app:layout_constraintTop_toBottomOf="@id/discount_voucher"
        tools:text="Discount: 25k" />


</androidx.constraintlayout.widget.ConstraintLayout>