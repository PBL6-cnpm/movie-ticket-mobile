<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_12dp"
    android:layout_margin="@dimen/_12dp"
    android:background="@drawable/shape_bg_option_board">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_movie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.32"
        android:src="@drawable/img_movie_test"
        app:layout_constraintDimensionRatio="164:230"
        app:shapeAppearanceOverlay="@style/ImageRefreshment"/>

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_movie"
        app:layout_constraintStart_toEndOf="@id/img_movie"
        tools:text="Batman"
        android:layout_marginStart="@dimen/_12dp"
        android:fontFamily="@font/baloo2_bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/time_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_name"
        app:layout_constraintStart_toEndOf="@id/img_movie"
        tools:text="Batman"
        android:layout_marginStart="@dimen/_12dp"
        android:fontFamily="@font/baloo2_semibold"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12dp"
        app:layout_constraintTop_toBottomOf="@id/time_movie"
        app:layout_constraintStart_toEndOf="@id/img_movie"
        tools:text="Batman"
        android:fontFamily="@font/baloo2_semibold"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12dp"
        app:layout_constraintTop_toBottomOf="@id/room"
        app:layout_constraintStart_toEndOf="@id/img_movie"
        tools:text="Batman"
        android:fontFamily="@font/baloo2_semibold"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/line_booking"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/seat"
        android:background="@drawable/line"
        app:layout_constraintStart_toEndOf="@id/img_movie"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/refreshments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12dp"
        app:layout_constraintTop_toBottomOf="@id/line_booking"
        app:layout_constraintStart_toEndOf="@id/img_movie"
        tools:text="Batman"
        android:fontFamily="@font/baloo2_semibold"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_movie"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="150.000"
        android:fontFamily="@font/baloo2_semibold"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/shape_bg_enter"
        app:layout_constraintDimensionRatio="70:30"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refreshments"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="@id/btn_save"
        app:layout_constraintBottom_toBottomOf="@id/btn_save"
        app:layout_constraintEnd_toEndOf="@id/btn_save"
        android:text="@string/text_qr_code"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/_8ssp" />
</androidx.constraintlayout.widget.ConstraintLayout>