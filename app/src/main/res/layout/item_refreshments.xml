<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp"
    android:background="@drawable/shape_bg_branch"
    android:padding="@dimen/_12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_refreshments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@color/black"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:shapeAppearanceOverlay="@style/ImageRefreshment" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6dp"
        android:ellipsize="end"
        android:fontFamily="@font/baloo2_semibold"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_refreshments"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Combo 1 bap nuoc" />


    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6dp"
        android:ellipsize="end"
        android:fontFamily="@font/baloo2_bold"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_refreshments"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="199.000d" />

    <ImageView
        android:id="@+id/btn_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_6dp"
        android:src="@drawable/minus"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintWidth_percent="0.1"
        app:tint="@color/color_description" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bg_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@color/transparent"
        app:strokeColor="#727272"
        app:strokeWidth="@dimen/_1dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="@dimen/_4dp"
        app:layout_constraintStart_toEndOf="@id/btn_minus"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus"
        app:layout_constraintTop_toTopOf="@id/btn_minus"
        app:layout_constraintWidth_percent="0.08"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="@color/white"
        tools:text="3"
        android:gravity="center"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="@id/bg_tv"
        app:layout_constraintTop_toTopOf="@id/bg_tv"
        app:layout_constraintBottom_toBottomOf="@id/bg_tv"
        app:layout_constraintEnd_toEndOf="@id/bg_tv"/>

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_4dp"
        android:src="@drawable/add"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/bg_tv"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintWidth_percent="0.1"
        app:tint="#FE7E32" />


</androidx.constraintlayout.widget.ConstraintLayout>