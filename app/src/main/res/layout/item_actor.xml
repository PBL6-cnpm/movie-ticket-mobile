<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bg_img_actor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="164:230"
        app:cardCornerRadius="@dimen/_16sdp">
        <ImageView
            android:id="@+id/img_actor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_movie_test"/>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_name_actor"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:visibility="visible"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo2_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/bg_img_actor"
        app:layout_constraintTop_toBottomOf="@id/bg_img_actor"
        tools:text="Duong Quang Minh Hoang"/>
</androidx.constraintlayout.widget.ConstraintLayout>