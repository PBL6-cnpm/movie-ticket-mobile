<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topbar_1d273a"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_6sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/baloo2_semibold"
        android:text="@string/text_profile_setting"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_12dp">

            <TextView
                android:id="@+id/title_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:fontFamily="@font/baloo2_bold"
                android:text="@string/text_edit_profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:background="@drawable/shape_bg_branch"
                android:padding="@dimen/_12dp"
                android:layout_marginTop="@dimen/_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_edit_profile">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@color/green"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.24"
                    app:shapeAppearance="@style/CircleImageView" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12dp"
                    android:fontFamily="@font/baloo2_bold"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintBottom_toBottomOf="@id/avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/avatar"
                    app:layout_constraintTop_toTopOf="@id/avatar"
                    tools:text="duongminhhoang333@gmail.com" />

                <TextView
                    android:id="@+id/title_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:fontFamily="@font/baloo2_bold"
                    android:text="@string/text_email_address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="@id/avatar"
                    app:layout_constraintTop_toBottomOf="@id/avatar" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/edt_border"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:drawableStart="@drawable/icon_mail"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableTint="#808080"
                    android:fontFamily="@font/baloo2_semibold"
                    android:hint="@string/text_enter_email"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_12dp"
                    android:textColor="#808080"
                    android:textColorHint="#808080"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_email"
                    app:layout_constraintWidth_percent="0.9" />

                <TextView
                    android:id="@+id/title_full_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:fontFamily="@font/baloo2_bold"
                    android:text="@string/text_full_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="@id/avatar"
                    app:layout_constraintTop_toBottomOf="@id/edt_email" />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/edt_border"
                    android:drawableStart="@drawable/profile"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableTint="#808080"
                    android:fontFamily="@font/baloo2_semibold"
                    android:hint="@string/text_enter_email"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_12dp"
                    android:textColor="#808080"
                    android:textColorHint="#808080"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_full_name"
                    app:layout_constraintWidth_percent="0.9" />

                <TextView
                    android:id="@+id/title_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:fontFamily="@font/baloo2_bold"
                    android:text="@string/text_phone_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="@id/avatar"
                    app:layout_constraintTop_toBottomOf="@id/edt_name" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/edt_border"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableTint="#808080"
                    android:fontFamily="@font/baloo2_semibold"
                    android:hint="@string/text_enter_email"
                    android:inputType="phone"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_12dp"
                    android:textColor="#808080"
                    android:textColorHint="#808080"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_phone"
                    app:layout_constraintWidth_percent="0.9" />

                <ImageView
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:src="@drawable/shape_bg_enter"
                    app:layout_constraintDimensionRatio="130:40"
                    android:layout_marginTop="@dimen/_16dp"
                    app:layout_constraintEnd_toEndOf="@id/edt_phone"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintTop_toBottomOf="@id/edt_phone"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/btn_save"
                    app:layout_constraintStart_toStartOf="@id/btn_save"
                    app:layout_constraintBottom_toBottomOf="@id/btn_save"
                    app:layout_constraintEnd_toEndOf="@id/btn_save"
                    android:text="@string/text_update_profile"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/title_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:fontFamily="@font/baloo2_bold"
                android:text="@string/text_change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_information" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/change_pw_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:background="@drawable/shape_bg_branch"
                android:padding="@dimen/_12dp"
                android:layout_marginTop="@dimen/_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_change_password">

                <TextView
                    android:id="@+id/tv_current_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="@string/text_current_password"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_current_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_border"
                    android:drawableStart="@drawable/icon_password"
                    android:drawableEnd="@drawable/icon_invisible"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableTint="#808080"
                    android:fontFamily="@font/baloo2_semibold"
                    android:hint="@string/text_enter_password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_12dp"
                    android:textColor="@color/white"
                    android:textColorHint="#808080"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintWidth_percent="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_password" />

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="@string/text_new_password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="@id/tv_current_password"
                    app:layout_constraintTop_toBottomOf="@id/edt_current_password" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_border"
                    android:drawableStart="@drawable/icon_password"
                    android:drawableEnd="@drawable/icon_invisible"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableTint="#808080"
                    android:fontFamily="@font/baloo2_semibold"
                    android:hint="@string/text_enter_password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_12dp"
                    android:textColor="@color/white"
                    android:textColorHint="#808080"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_password" />

                <TextView
                    android:id="@+id/tv_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="@string/text_confirm_password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="@id/tv_current_password"
                    app:layout_constraintTop_toBottomOf="@id/edt_password" />

                <EditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_border"
                    android:drawableStart="@drawable/icon_password"
                    android:drawableEnd="@drawable/icon_invisible"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableTint="#808080"
                    android:fontFamily="@font/baloo2_semibold"
                    android:hint="@string/text_re_enter_password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_12dp"
                    android:textColor="@color/white"
                    android:textColorHint="#808080"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.9"
                    app:layout_constraintTop_toBottomOf="@id/tv_confirm_password" />

                <ImageView
                    android:id="@+id/btn_update_password"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:src="@drawable/shape_bg_enter"
                    app:layout_constraintDimensionRatio="130:40"
                    android:layout_marginTop="@dimen/_16dp"
                    app:layout_constraintEnd_toEndOf="@id/edt_confirm_password"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintTop_toBottomOf="@id/edt_confirm_password"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/btn_update_password"
                    app:layout_constraintStart_toStartOf="@id/btn_update_password"
                    app:layout_constraintBottom_toBottomOf="@id/btn_update_password"
                    app:layout_constraintEnd_toEndOf="@id/btn_update_password"
                    android:text="@string/text_update_password"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>